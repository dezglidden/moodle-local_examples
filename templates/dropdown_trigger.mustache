{{!
    @template local_examples/dropdown_trigger

    Template for displaying the dropdown trigger button.
}}
{{#trigger}}
<button class="btn btn-primary dropdown-toggle {{classes}}"
        type="button"
        id="dropdownMenuButton"
        data-toggle="dropdown"
        aria-expanded="false"
        {{#attributes}}
            {{name}}="{{value}}"
        {{/attributes}}>
    {{text}}
</button>
{{/trigger}}
